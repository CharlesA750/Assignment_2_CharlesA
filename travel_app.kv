BoxLayout:
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        Label:
            text: "Sort By:"
        Spinner:
            id: sorting_type
            values: app.sorting_code
            on_text: app.change_sorting(self.text)
        Label:
            text: "Add New Place"
        Label:
            text: "Name:"
        TextInput:
            id: name_entry
        Label:
            text: "Country:"
        TextInput:
            id: country_entry
            value: ""
        Label:
            text: "Priority"
        TextInput:
            id: priority_entry
            value: ""
        Button:
            size_hint_y: 1.2
            text: "Add Place"
            on_release: app.create_widget()
        Button:
            size_hint_y: 1.3
            text: "Clear"
            on_release: app.clear_place(name_entry)
            on_release: app.clear_place(country_entry)
            on_release: app.clear_place(priority_entry)

    BoxLayout:
        id: missing_id_name
        orientation: "vertical"
        Label:
            size_hint_y: 0.08
            text: "Places to Visit: "
        Button:
            text: "Name, country, priority, visit_status"
        Label:
            size_hint_y: 0.08
            text: "Change this to show travel status "

